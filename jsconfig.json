{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"target": "es2020",
		"module": "esnext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
